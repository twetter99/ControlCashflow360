rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================
    // FUNCIONES DE UTILIDAD
    // ============================
    
    // Verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Verificar si el usuario es propietario del documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Verificar si el documento pertenece al usuario autenticado
    function belongsToUser() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Verificar si el nuevo documento tendrá el userId del usuario autenticado
    function willBelongToUser() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // ============================
    // COLECCIÓN: users
    // ============================
    match /users/{userId} {
      // Usuarios solo pueden leer/escribir su propio perfil
      allow read: if isOwner(userId);
      
      // Crear perfil: solo si es su propio documento
      allow create: if isOwner(userId);
      
      // Actualizar perfil: solo campos permitidos (no puede cambiar su propio rol)
      allow update: if isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      // No se permite eliminar usuarios desde cliente
      allow delete: if false;
    }
    
    // ============================
    // COLECCIÓN: companies
    // ============================
    match /companies/{companyId} {
      // Leer: solo propietario
      allow read: if belongsToUser();
      
      // Crear: debe incluir userId del usuario autenticado
      allow create: if willBelongToUser();
      
      // Actualizar: solo propietario, no puede cambiar userId
      allow update: if belongsToUser() && 
        request.resource.data.userId == resource.data.userId;
      
      // Eliminar: solo propietario
      allow delete: if belongsToUser();
    }
    
    // ============================
    // COLECCIÓN: accounts
    // ============================
    match /accounts/{accountId} {
      // Leer: solo propietario
      allow read: if belongsToUser();
      
      // Crear: debe incluir userId del usuario autenticado
      allow create: if willBelongToUser();
      
      // Actualizar: solo propietario, no puede cambiar userId
      allow update: if belongsToUser() && 
        request.resource.data.userId == resource.data.userId;
      
      // Eliminar: solo propietario
      allow delete: if belongsToUser();
    }
    
    // ============================
    // COLECCIÓN: credit_lines
    // ============================
    match /credit_lines/{creditLineId} {
      // Leer: solo propietario
      allow read: if belongsToUser();
      
      // Crear: debe incluir userId del usuario autenticado
      allow create: if willBelongToUser();
      
      // Actualizar: solo propietario, no puede cambiar userId
      allow update: if belongsToUser() && 
        request.resource.data.userId == resource.data.userId;
      
      // Eliminar: solo propietario
      allow delete: if belongsToUser();
    }
    
    // ============================
    // COLECCIÓN: credit_cards
    // ============================
    match /credit_cards/{creditCardId} {
      // Leer: solo propietario
      allow read: if belongsToUser();
      
      // Crear: debe incluir userId del usuario autenticado
      allow create: if willBelongToUser();
      
      // Actualizar: solo propietario, no puede cambiar userId
      allow update: if belongsToUser() && 
        request.resource.data.userId == resource.data.userId;
      
      // Eliminar: solo propietario
      allow delete: if belongsToUser();
    }
    
    // ============================
    // COLECCIÓN: transactions
    // ============================
    match /transactions/{transactionId} {
      // Leer: solo propietario
      allow read: if belongsToUser();
      
      // Crear: debe incluir userId del usuario autenticado
      allow create: if willBelongToUser();
      
      // Actualizar: solo propietario, no puede cambiar userId ni companyId
      allow update: if belongsToUser() && 
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.companyId == resource.data.companyId;
      
      // Eliminar: solo propietario
      allow delete: if belongsToUser();
    }
    
    // ============================
    // COLECCIÓN: alertConfigs
    // ============================
    match /alertConfigs/{configId} {
      // Leer: solo propietario
      allow read: if belongsToUser();
      
      // Crear: debe incluir userId del usuario autenticado
      allow create: if willBelongToUser();
      
      // Actualizar: solo propietario
      allow update: if belongsToUser() && 
        request.resource.data.userId == resource.data.userId;
      
      // Eliminar: solo propietario
      allow delete: if belongsToUser();
    }
    
    // ============================
    // COLECCIÓN: daily_snapshots
    // ============================
    match /daily_snapshots/{snapshotId} {
      // Leer: usuarios autenticados (snapshots son de solo lectura)
      allow read: if isAuthenticated();
      
      // Solo Cloud Functions o servidor pueden crear/modificar
      allow create, update, delete: if false;
    }
    
    // ============================
    // COLECCIÓN: auditLogs (legacy)
    // ============================
    match /auditLogs/{logId} {
      // Solo lectura para el propietario
      allow read: if belongsToUser();
      
      // Solo servidor puede crear logs
      allow create, update, delete: if false;
    }
    
    // ============================
    // COLECCIÓN: audit_logs (nueva)
    // ============================
    match /audit_logs/{logId} {
      // Solo lectura para el propietario (solo sus propios logs)
      allow read: if belongsToUser();
      
      // Solo servidor (Firebase Admin SDK) puede crear/modificar logs
      // Los clientes nunca deben poder manipular logs de auditoría
      allow create, update, delete: if false;
    }

    // ============================
    // REGLA POR DEFECTO: Denegar todo lo demás
    // ============================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
